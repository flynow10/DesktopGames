{
  "name": "desktopgames",
  "version": "1.0.0",
  "description": "A collection of games that can be played offline.",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "build": "npm run package && npm run make",
    "test": "nodemon ./test.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flynow10/snake-electron.git"
  },
  "author": "Flynow10",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/flynow10/snake-electron/issues"
  },
  "homepage": "https://github.com/flynow10/snake-electron#readme",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.65",
    "@electron-forge/maker-deb": "^6.0.0-beta.65",
    "@electron-forge/maker-rpm": "^6.0.0-beta.65",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.65",
    "@electron-forge/maker-zip": "^6.0.0-beta.65",
    "electron": "^20.0.2",
    "eslint": "^8.24.0",
    "express": "^4.18.1"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "matter-js": "^0.18.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "desktopgames"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
